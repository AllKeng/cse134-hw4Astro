---
// BaseLayout.astro
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CSS from '../components/GlobalStyles.astro'

const { children, activeLink } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Allen's Portfolio</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&family=Open+Sans:wght@300;600&display=swap" rel="stylesheet">
  </head>
  <body>
    <Header activeLink={activeLink} />
     <!-- Main Content (Where children are inserted) -->
     <main>
        <slot />
      </main>
    <Footer />
    <CSS />
  </body>
</html>
